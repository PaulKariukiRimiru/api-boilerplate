{
  "name": "school-api",
  "version": "1.0.0",
  "description": "small api for a school management system",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx tsc",
    "start": "npx pm2 start pm2.yaml",
    "start:dev": "tsc-watch --onSuccess \"node ./dist/src/server.js\" --compiler typescript/bin/tsc",
    "test": "jest",
    "test:dev": "yarn test --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "tslint --project . --fix",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PaulKariukiRimiru/school-api.git"
  },
  "author": "Paul Rimiru",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PaulKariukiRimiru/school-api/issues"
  },
  "homepage": "https://github.com/PaulKariukiRimiru/school-api#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "typescript": "^3.3.3333",
    "coveralls": "^3.0.2",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/node": "^11.11.3",
    "@types/redis": "^2.8.11",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "supertest": "^4.0.0",
    "swagger-ui-express": "^4.0.2",
    "tslint": "^5.14.0",
    "tslint-microsoft-contrib": "^6.1.0"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "5.0.0-alpha.7",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "pm2": "^3.4.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "4",
    "sequelize-typescript": "^0.6.8"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
