{
  "name": "school-api",
  "version": "1.0.0",
  "description": "small api for a school management system",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "tsc",
    "start": "pm2 start pm2.yaml",
    "stop": "pm2 stop pm2.yaml",
    "start:dev": "ts-node -T --project ./tsconfig.json src/server.ts",
    "start:dev:watch": "nodemon",
    "test": "mocha --require tsconfig-paths/register --require ts-node/register \"./src/**/*.spec.ts\" --watch-extensions ts --exit",
    "test:dev": "yarn test --watch",
    "test:coverage": "nyc --reporter=text mocha --require tsconfig-paths/register --require ts-node/register \"./src/**/*.spec.ts\" --watch-extensions ts --exit",
    "coveralls": "NODE_ENV=test nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --project . --fix",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PaulKariukiRimiru/school-api.git"
  },
  "author": "Paul Rimiru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PaulKariukiRimiru/school-api/issues"
  },
  "homepage": "https://github.com/PaulKariukiRimiru/school-api#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "@types/redis": "^2.8.11",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "sinon": "^7.3.0",
    "supertest": "^4.0.0",
    "swagger-ui-express": "^4.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "5.0.0-alpha.7",
    "nyc": "^13.3.0",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "pm2": "^3.4.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "4",
    "sequelize-typescript": "^0.6.8",
    "tsconfig-paths": "^3.8.0"
  }
}
