{
  "name": "school-api",
  "version": "1.0.0",
  "description": "small api for a school management system",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx tsc",
    "start": "npx pm2 start pm2.yaml",
    "start:dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "test": "jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PaulKariukiRimiru/school-api.git"
  },
  "author": "Paul Rimiru",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PaulKariukiRimiru/school-api/issues"
  },
  "homepage": "https://github.com/PaulKariukiRimiru/school-api#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/node": "^11.11.3",
    "@types/redis": "^2.8.11",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "5.0.0-alpha.7",
    "pm2": "^3.4.0",
    "redis": "^2.8.0",
    "supertest": "^4.0.0",
    "swagger-ui-express": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
